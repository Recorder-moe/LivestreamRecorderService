{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dockerImageName": {
            "type": "string"
        },
        "uploaderImageName": {
            "type": "string"
        },
        "containerName": {
            "type": "string"
        },
        "commandOverrideArray": {
            "type": "array"
        },
        "mountPath": {
            "type": "string",
            "defaultValue": "/sharedvolume"
        },
        "mountPathAndFileName": {
            "type": "string",
            "defaultValue": "/sharedvolume/$(newGuid())"
        },
        "environmentVariables": {
            "type": "array"
        }
    },
    "resources": [
        {
            "apiVersion": "2023-05-01",
            "name": "[parameters('containerName')]",
            "location": "eastasia",
            "tags": {},
            "type": "Microsoft.ContainerInstance/containerGroups",
            "zones": [],
            "properties": {
                "initContainers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('dockerImageName')]",
                            "command": "[parameters('commandOverrideArray')]",
                            "ports": [
                                {
                                    "port": 80,
                                    "protocol": "TCP"
                                }
                            ],
                            "volumeMounts": [
                                {
                                    "name": "sharedvolume",
                                    "mountPath": "[parameters('mountPath')]"
                                }
                            ],
                            "environmentVariables": "[parameters('environmentVariables')]",
                            "securityContext": {
                                "runAsUser": 1001,
                                "runAsGroup": 0
                            }
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "uploader",
                        "properties": {
                            "image": "[parameters('uploaderImageName')]",
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": "1"
                                }
                            },
                            "command": "[parameters('mountPathAndFileName')]",
                            "ports": [
                                {
                                    "port": 80,
                                    "protocol": "TCP"
                                }
                            ],
                            "volumeMounts": [
                                {
                                    "name": "sharedvolume",
                                    "mountPath": "[parameters('mountPath')]"
                                }
                            ],
                            "environmentVariables": "[parameters('environmentVariables')]",
                            "securityContext": {
                                "runAsUser": 1001,
                                "runAsGroup": 0
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "port": 80,
                            "protocol": "TCP"
                        }
                    ]
                },
                "volumes": [
                    {
                        "name": "sharedvolume",
                        "emptyDir": {}
                    }
                ]
            }
        }
    ]
}
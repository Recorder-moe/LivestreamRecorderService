{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerName": {
            "type": "string"
        },
        "commandOverrideArray": {
            "type": "array"
        },
        "fileshareVolumeName": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string"
        },
        "storageAccountKey": {
            "type": "securestring"
        }
    },
    "resources": [
        {
            "apiVersion": "2022-09-01",
            "name": "[parameters('containerName')]",
            "location": "eastasia",
            "tags": {},
            "type": "Microsoft.ContainerInstance/containerGroups",
            "zones": [],
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "ghcr.io/jim60105/docker-streamlink:5.1.2",
                            "resources": {
                                "requests": {
                                    "cpu": "1",
                                    "memoryInGB": "1"
                                }
                            },
                            "command": "[parameters('commandOverrideArray')]",
                            "ports": [
                                {
                                    "port": 80,
                                    "protocol": "TCP"
                                }
                            ],
                            "volumeMounts": [
                                {
                                    "name": "downloads",
                                    "mountPath": "/downloads"
                                }
                            ]
                        }
                    }
                ],
                "restartPolicy": "Never",
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "port": 80,
                            "protocol": "TCP"
                        }
                    ]
                },
                "volumes": [
                    {
                        "name": "downloads",
                        "azureFile": {
                            "shareName": "[parameters('fileshareVolumeName')]",
                            "storageAccountName": "[parameters('storageAccountName')]",
                            "storageAccountKey": "[parameters('storageAccountKey')]"
                        }
                    }
                ]
            }
        }
    ]
}